<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Layer: Radial Gradient (Dark to Light) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="150%"
                android:centerX="45%"
                android:centerY="45%"
                android:startColor="#FF121212"
                android:centerColor="#FF2D2D2D"
                android:endColor="#FF484848" />
            <corners android:radius="12dp" />  <!-- Optional rounded corners -->
        </shape>
    </item>

    <!-- Top Layer: Linear Gradient (3D Edge Highlight) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF" />  <!-- Fade out -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Optional: Shadow at bottom for depth -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />  <!-- Subtle shadow -->
            <corners android:radius="10dp" />  <!-- Slightly smaller than base -->
        </shape>
    </item>
</layer-list>